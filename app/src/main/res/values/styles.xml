<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F8F7F7</item>
        <item name="colorPrimaryDark">#F8F7F7</item>
        <item name="colorAccent">@color/color6</item>
        <item name="android:navigationBarColor">#0090A5</item>
        <item name="android:textSelectHandle">@drawable/ic_fselecthandlecenter</item>
        <item name="android:textSelectHandleLeft">@drawable/ic_fselecthandleleft</item>
        <item name="android:textSelectHandleRight">@drawable/ic_fselecthandleright</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#00DDFF</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">#B3FFFFFF</item>
    </style>

    <style name="Text">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="TextBold">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>


    <style name="TextBold.Primary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="Text.Ð¡onsent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#122932</item>
    </style>

    <style name="TextBold.Registration">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#122932</item>
    </style>


    <style name="Intro">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Intro.Primary">
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="Intro.Primary.Header">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Floor">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

</resources>
